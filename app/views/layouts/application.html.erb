<!DOCTYPE html>
<html>
<head>
  <title>Blogger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<p class="flash"><%= flash.notice %></p>

<div id="container">
    <div id="content">

<%= yield %>
<div style="width:100%; float:left;">
  <%=link_to 'New Article', new_article_path, class:'article_title'%>
  <%=link_to 'Tags', tags_path, class:'article_title' %>
  <%=link_to 'Sign Up', new_author_path, class:'article_title' %>
  <%=link_to 'Login', login_path, class:'article_title' %>
  
</div>
<hr>
      <h6>
        <% if logged_in? %>
          <%= "Logged in as #{current_user.email}" %>
          <%= link_to '(logout)', logout_path %>
        <% else %>
          Logged out
          <%= link_to '(login)', login_path %>
        <% end %>
      </h6>
    </div>
  </div>


</body>
</html>
